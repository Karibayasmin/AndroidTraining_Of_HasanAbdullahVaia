<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bc"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:scaleType="fitStart"
        android:src="@drawable/bc_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="@+id/img_bc"
        android:layout_marginBottom="28dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_namep_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milena Markovna"
        app:layout_constraintStart_toEndOf="@+id/img_profile"
        app:layout_constraintTop_toTopOf="@+id/img_profile"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_locationp_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_namep_level"
        app:layout_constraintStart_toStartOf="@+id/tv_namep_level"
        android:src="@drawable/ic_location_on_white_24dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_locationp_level"
        app:layout_constraintStart_toEndOf="@+id/img_locationp_level"
        android:layout_marginStart="16dp"
        android:text="New York, USA"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_photo_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_bc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_photo_black_24dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/img_photo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_photo_level"
        app:layout_constraintTop_toTopOf="@id/img_photo_level"
        android:layout_marginStart="16dp"
        android:text="247 Photos"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_photo_value"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/view_photo"
        app:layout_constraintTop_toBottomOf="@id/img_photo_level"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_video_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_photo"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/img_photo_level"
        android:src="@drawable/ic_video_library_black_24dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_video_level"
        app:layout_constraintStart_toEndOf="@+id/img_video_level"
        android:layout_marginStart="16dp"
        android:text="59 Videos"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_video_level"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/view_video"
        app:layout_constraintTop_toBottomOf="@id/img_video_level"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_music_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_video"
        app:layout_constraintStart_toStartOf="@+id/img_video_level"
        android:src="@drawable/ic_music_video_black_24dp"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_music_level"
        app:layout_constraintStart_toEndOf="@+id/img_music_level"
        android:text="27 Videos"
        android:layout_marginStart="16dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_music_level"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/view_music"
        app:layout_constraintTop_toBottomOf="@id/img_music_level"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_location_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_music"
        app:layout_constraintStart_toStartOf="@+id/img_music_level"
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_location_level"
        app:layout_constraintStart_toEndOf="@+id/img_location_level"
        android:layout_marginStart="16dp"
        android:text="513 Checkins"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_location_level"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

    <View
        android:id="@+id/view_location"
        app:layout_constraintTop_toBottomOf="@id/img_location_level"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:text="Follow"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>